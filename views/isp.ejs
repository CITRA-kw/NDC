<% include partials/template/head.ejs %> 

      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">ISP List</span>
            <span class="badge badge-secondary badge-pill">3</span>
          </h4>
          <ul class="list-group mb-3" id="isp_list">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">ISP 1</h6>
                <small class="text-muted">Brief description</small>
              </div>
              <small class="text-muted"><a href="/" id="isp-update-click"><strong>update</strong></a> | <a href="#"><strong>delete</strong></a></small>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">ISP2</h6>
                <small class="text-muted">Brief description</small>
              </div>
              <small class="text-muted"><a href="/" id="isp-update-click"><strong>update</strong></a> | <a href="#"><strong>delete</strong></a></small>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">ISP3</h6>
                <small class="text-muted">Brief description</small>
              </div>
              <small class="text-muted"><a href="/" id="isp-update-click"><strong>update</strong></a> | <a href="#"><strong>delete</strong></a></small>
            </li>
          </ul> 

<% if(pageID == 'mainISP') { %>           
        </div>
        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Add New ISP</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name">ISP Name</label>
                <input type="text" class="form-control" id="name" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid ISP name is required.
                </div>
              </div>              
            </div>
              
              
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="contact_name">Contact Name</label>
                <input type="text" class="form-control" id="contact_name" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid contact name is required.
                </div>
              </div>              
              <div class="col-md-6 mb-3">
                <label for="contact_phone">Contact Phone No.</label>
                <input type="text" class="form-control" id="contact_phone" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid contact phone number is required.
                </div>
              </div>                              
            </div>
            

            <div class="mb-3">
              <label for="contact_email">Email</label>
              <input type="email" class="form-control" id="contact_email" placeholder="you@example.com" required>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>
<% } else { %>

         </div>
        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Update ISP</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name">ISP Name</label>
                <input type="text" class="form-control" id="name" placeholder="" value="" required>
                <input type="hidden" name="ispId" id="ispId" value="<%= ispID %>" >
                <div class="invalid-feedback">
                  Valid ISP name is required.
                </div>
              </div>              
            </div>
              
              
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="contact_name">Contact Name</label>
                <input type="text" class="form-control" id="contact_name" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid contact name is required.
                </div>
              </div>              
              <div class="col-md-6 mb-3">
                <label for="contact_phone">Contact Phone No.</label>
                <input type="text" class="form-control" id="contact_phone" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid contact phone number is required.
                </div>
              </div>                              
            </div>
            

            <div class="mb-3">
              <label for="contact_email">Email</label>
              <input type="email" class="form-control" id="contact_email" placeholder="you@example.com" required>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>             
              
<% } %>            
              
            
            <hr class="mb-4">

            <button class="btn btn-primary btn-lg btn-block" type="submit">Save &amp; Add</button>
          </form>
        </div>
      </div>

