<% include partials/template/head.ejs %> 

      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Listed Patch Panels</span>
            <span class="badge badge-secondary badge-pill" id="list_num">0</span>
          </h4>
          <ul class="list-group mb-3" id="some_list">
            <div class="sk-cube-grid">
              <div class="sk-cube sk-cube1"></div>
              <div class="sk-cube sk-cube2"></div>
              <div class="sk-cube sk-cube3"></div>
              <div class="sk-cube sk-cube4"></div>
              <div class="sk-cube sk-cube5"></div>
              <div class="sk-cube sk-cube6"></div>
              <div class="sk-cube sk-cube7"></div>
              <div class="sk-cube sk-cube8"></div>
              <div class="sk-cube sk-cube9"></div>
            </div>
          </ul> 
        </div>
<% if(pageID == 'mainPatchPanel') { %>           

        <div class="col-md-8 order-md-1" id="pageContent">
          <h4 class="mb-3">Add New Patch Panel</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name">Patch Panel Name</label>
                <input type="text" class="form-control" id="name" required>
                <div class="invalid-feedback">
                  A valid patch panel name is required.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="location">Location</label>
                <select class="custom-select d-block w-100" id="location" required>
                  <option>TEC</option>
                  <option>RSL</option>
                  <option>UHM</option>
                  <option>JHR</option>
                </select>                
                  <div class="invalid-feedback">
                  A valid location name is required.
                </div>
              </div>              
            </div> 
              
            <div class="row"> 
              <div class="col-md-6 mb-3">
                <label for="portsNum">No. of Ports</label>
                <input type="number" min="0" class="form-control" id="portsNum" required>
                <div class="invalid-feedback">
                  A valid number of ports is required.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="type">Type</label>
                <select class="custom-select d-block w-100" id="ports_type" required>
                  <option>SC</option>
                  <option>FC</option>
                  <option>LC</option>
                </select>                
                  <div class="invalid-feedback">
                  A valid type is required.
                </div>
              </div>  
            </div>
            <div class="row"> 
              <div class="col">
                <label for="odf">ODF</label>
                <input type="text" class="form-control" id="odf" required>                 
                  <div class="invalid-feedback">
                  A valid ODF is required.
                </div>            
              </div>              
            </div>
              <br/>
            <div class="row">
              <div class="col">
                <label for="comment">Comments</label>
                <textarea rows="4" class="form-control" id="comment"></textarea>
              </div>
            </div>
              
            <hr class="mb-4">

            <button class="btn btn-primary btn-lg btn-block ladda-button" data-dismiss="modal" data-style="expand-right" type="submit">Submit</button>
             
             
<% } else { %>

        <div class="col-md-8 order-md-1" id="pageContent">
          <h4 class="mb-3">Update Patch Panel</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name">Patch Panel Name</label>
                <input type="text" class="form-control" id="name" required>
                <input type="hidden" name="patchPanelId" id="patchPanelId" value="<%= patchPanelID %>" >
                <div class="invalid-feedback">
                  A valid patch panel name is required.
                </div>
              </div>   
              <div class="col-md-6 mb-3">
                <label for="location">Location</label>
                <select class="custom-select d-block w-100" id="location" required>
                  <option>TEC</option>
                  <option>RSL</option>
                  <option>UHM</option>
                  <option>JHR</option>
                </select>                
                  <div class="invalid-feedback">
                  A valid location name is required.
                </div>
              </div>              
            </div> 
              
            <div class="row"> 
              <div class="col-md-6 mb-3">
                <label for="portsNum">No. of Ports</label>
                <input type="number" min="0" class="form-control" id="portsNum" required readonly>
                <div class="invalid-feedback">
                  a valid number of ports is required.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="type">Type</label>
                <select class="custom-select d-block w-100" id="ports_type" required disabled="disabled">
                  <option>SC</option>
                  <option>FC</option>
                  <option>LC</option>
                </select>                
                  <div class="invalid-feedback">
                  A valid type is required.
                </div>
              </div>  
            </div>
            <div class="row"> 
              <div class="col">
                <label for="odf">ODF</label>
                <input type="text" class="form-control" id="odf" required>                   
                  <div class="invalid-feedback">
                  A valid ODF is required.
                </div>         
              </div>              
            </div>
              <br/>  
            <div class="row">
              <div class="col">
                <label for="comment">Comments</label>
                <textarea rows="4" class="form-control" id="comment"></textarea>
              </div>
            </div>
              
            <hr class="mb-4">

            <button class="btn btn-primary btn-lg btn-block ladda-button" data-dismiss="modal" data-style="expand-right" type="submit">Update</button>
              
                 
              
<% } %>            
              
            
          </form>
        </div>
      </div>

          
          
<% include partials/template/foot.ejs %> 