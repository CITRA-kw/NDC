<% include partials/template/head.ejs %> 

      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Listed Patch Panels</span>
            <span class="badge badge-secondary badge-pill" id="list_num">0</span>
          </h4>
          <ul class="list-group mb-3" id="some_list">
            <div class="sk-cube-grid">
              <div class="sk-cube sk-cube1"></div>
              <div class="sk-cube sk-cube2"></div>
              <div class="sk-cube sk-cube3"></div>
              <div class="sk-cube sk-cube4"></div>
              <div class="sk-cube sk-cube5"></div>
              <div class="sk-cube sk-cube6"></div>
              <div class="sk-cube sk-cube7"></div>
              <div class="sk-cube sk-cube8"></div>
              <div class="sk-cube sk-cube9"></div>
            </div>
          </ul> 
        </div>
<% if(pageID == 'mainPatchPanel') { %>           

        <div class="col-md-8 order-md-1" id="pageContent">
          <h4 class="mb-3">Add New Patch Panel</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name">Patch Panel Name</label>
                <input type="text" class="form-control" id="name" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid Patch Panel name is required.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="location">Location</label>
                <select class="custom-select d-block w-100" id="location" required>
                  <option>TEC</option>
                  <option>RSL</option>
                  <option>UHM</option>
                  <option>JHR</option>
                </select>                
                  <div class="invalid-feedback">
                  Valid location name is required.
                </div>
              </div>              
            </div> 
              
             
<% } else { %>

        <div class="col-md-8 order-md-1" id="pageContent">
          <h4 class="mb-3">Update Patch Panel</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name">Patch Panel Name</label>
                <input type="text" class="form-control" id="name" placeholder="" value="" required>
                <input type="hidden" name="patchPanelId" id="patchPanelId" value="<%= patchPanelID %>" >
                <div class="invalid-feedback">
                  Valid Patch Panel name is required.
                </div>
              </div>   
              <div class="col-md-6 mb-3">
                <label for="location">Location</label>
                <select class="custom-select d-block w-100" id="location" required>
                  <option>TEC</option>
                  <option>RSL</option>
                  <option>UHM</option>
                  <option>JHR</option>
                </select>                
                  <div class="invalid-feedback">
                  Valid location name is required.
                </div>
              </div>              
            </div>
              
                 
              
<% } %>            
              
            
            <hr class="mb-4">

            <button class="btn btn-primary btn-lg btn-block ladda-button" data-dismiss="modal" data-style="expand-right" type="submit">Submit</button>
          </form>
        </div>
      </div>

          
          
<% include partials/template/foot.ejs %> 