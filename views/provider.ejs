        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Add New Provider</h4>
          <form class="needs-validation" novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="ispName">Provider Name</label>
                <input type="text" class="form-control" id="ispName" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid Provider name is required.
                </div>
              </div>              
            </div>
              
              
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="contactName">Contact Name</label>
                <input type="text" class="form-control" id="contactName" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid contact name is required.
                </div>
              </div>              
              <div class="col-md-6 mb-3">
                <label for="contactPhone">Contact Phone No.</label>
                <input type="text" class="form-control" id="contactPhone" placeholder="" value="" required>
                <div class="invalid-feedback">
                  Valid contact phone number is required.
                </div>
              </div>                              
            </div>              

            

            <div class="mb-3">
              <label for="email">Email <span class="text-muted">(Optional - to make required)</span></label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>

            
            <hr class="mb-4">


            <button class="btn btn-primary btn-lg btn-block" type="submit">Save &amp; Add</button>
          </form>
        </div>
